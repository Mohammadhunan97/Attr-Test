<% if user_signed_in? %>
<h1>signed in</h1><br>

<%= render 'header' %>

<a href="/" >Home</a>
<%= search_form_for @search, url: ('/search')  do |f| %>
  <%= f.label "Search by Title, Author, Genre or ISBN" %>
  <%= f.search_field :title_or_author_or_isbn_or_genre_cont %>
  <%= f.submit "Search" %>
<% end %>

<ul>
<% @search_result.each do |book| %>
  <li><%= book.title %>, <%= book.author %>, <%= book.genre %> owned by:  <%= book.user.email %> Request book: <a href="/books/request_trade?id=<%= book.id %>">Click</a></li>
<% end %>
</ul>

<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>

<% end %>
