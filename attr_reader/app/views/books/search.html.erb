<% if user_signed_in? %>
<%= render 'layouts/header' %>
	<br><br>
<%= search_form_for @search, class: "partyform", url: ('/search')  do |f| %>
  <%= f.label "Search by Title, Author, Genre or ISBN" %>
  <br>
  <%= f.search_field :title_or_author_or_isbn_or_genre_cont %>
    <br>
  <%= f.submit "Search" , class: "findsubmit" %>
<% end %>
 
<ul class="searchul">

<% @search_result.each do |book| %>
<hr>
  <li><%= book.title %> <%= book.author %> <%= book.genre %> owned by:  <%= book.user.email %> Request book:
  	<br>
   <a href="mailto:<%=book.user.email%>">Request book</a>
    | <a href="/<%= book.user.id %>/book_list" >Check out their profile</a></li>
<% end %>
</ul>



<% end %>
